<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="co.yedam.product.mapper.ProductMapper">
  
  	<select id="selectProduct" resultType="product">
  		SELECT *
  		FROM products
  	</select>
  	
  	<select id="searchProduct" parameterType="String" resultType="product">
  		SELECT *
  		FROM products
  		WHERE prod_no = prod_no
  		<if test="brand != null and !brand.equals('')">
    		AND prod_brand = ${brand}
  		</if>
  		<if test="type != null and !type.equals('')">
    		AND prod_type like ${type}
  		</if>
  		<if test="price != null and price != 0">
    		AND prod_price <![CDATA[<=]]> ${price}
  		</if>
  	</select>
  	
  	
  	
  </mapper>